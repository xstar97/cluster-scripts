aliases:
  k: "kubectl"
  f: "flux"
  gto: "gitops"
  ct: clustertool
  ctv: "ct info | awk -F': ' '/Clustertool Version/ {print $2}'"
  tcl: "talosctl"
  utils: "./scripts/utils.sh"
  pods: "./scripts/pods.sh"
  updateScripts: "git --git-dir=./scripts/.git --work-tree=./scripts pull"
  genAlias: "utils gen_alias --config ./aliases.yaml"
  tcdbinfo: "utils tcdbinfo"
  describePods: "utils describe_pods"
  dns: "utils dns"
  ingress: "utils ingress"
  lbIps: "utils lb_ips"
  stopAll: "utils stop_all"
  watcher: "utils watcher"
  fluxClean: "utils flux_clean"
  fluxUpdate: "utils flux_update"
